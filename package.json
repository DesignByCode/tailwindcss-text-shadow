{
  "name": "@designbycode/tailwindcss-text-shadow",
  "version": "1.1.2",
  "description": "Tailwindcss utilities for text stroke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DesignByCode/tailwindcss-text-shadow.git"
  },
  "bugs": {
    "url": "https://github.com/DesignByCode/tailwindcss-text-shadow/issues"
  },
  "homepage": "https://github.com/DesignByCode/tailwindcss-text-shadow#readme",
  "author": "Claude Myburgh <claude@designbycode.co.za>",
  "keywords": [
    "tailwindcss",
    "plugin",
    "tailwindcss-plugin",
    "tailwindcss text-shadow",
    "text-shadow",
    "designbycode"
  ],
  "type": "commonjs",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "node ./esbuild.config.js",
    "clean": "rd /s /q esm dist lib build .cache>nul 2>&1|echo.>nul",
    "dev": "node ./esbuild.config.js",
    "precommit": "pnpm test && lint-staged",
    "test": "",
    "test:watch": "pnpm test -- --watch"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "> .5% or last 2 versions"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "esbuild": "^0.16.17",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.3",
    "npm-dts": "^1.3.12",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.4.4",
    "typescript": "^4.9.5"
  }
}
