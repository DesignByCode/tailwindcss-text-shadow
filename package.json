{
  "name": "@designbycode/tailwindcss-text-shadow",
  "version": "1.1.8",
  "description": "Tailwindcss utilities for text stroke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DesignByCode/tailwindcss-text-shadow.git"
  },
  "bugs": {
    "url": "https://github.com/DesignByCode/tailwindcss-text-shadow/issues"
  },
  "homepage": "https://github.com/DesignByCode/tailwindcss-text-shadow#readme",
  "keywords": [
    "front-end",
    "frontend",
    "css",
    "tailwindcss",
    "plugin",
    "tailwindcss-plugin",
    "tailwindcss text-shadow",
    "text-shadow",
    "designbycode"
  ],
  "type": "module",
  "types": "dist",
  "main": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "module": "./dist/index.js",
  "files": [
    "dist",
    "utils"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && vite build",
    "clean": "rd /s /q dist .cache>nul 2>&1|echo.>nul",
    "dev": "pnpm build --watch",
    "postbuild": "tsc --emitDeclarationOnly",
    "prepublishOnly": "pnpm build",
    "release": "release-it"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "authors": [
    {
      "name": "Claude Myburgh",
      "email": "claude@designbycode.co.za",
      "url": "https://designbycode.co.za"
    }
  ],
  "browserslist": [
    "> .5% or last 2 versions"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/DesignByCode/tailwindcss-text-stroke/blob/main/LICENCE"
    }
  ],
  "peerDependencies": {
    "tailwindcss": ">=3.0.0 || >=3.0.0-alpha.1"
  },
  "devDependencies": {
    "@release-it/bumper": "^5.1.0",
    "@release-it/keep-a-changelog": "^4.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "@types/node": "^20.4.8",
    "autoprefixer": "^10.4.14",
    "husky": "^8.0.3",
    "postcss": "^8.4.27",
    "prettier": "^2.8.8",
    "release-it": "^16.1.4",
    "semantic-release": "^21.0.7",
    "tailwindcss": "^3.3.3",
    "terser": "^5.19.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.1",
    "vitest": "^0.34.1"
  }
}
